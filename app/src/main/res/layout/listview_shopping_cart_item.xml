<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:background="#fff"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/fragment_shopping_cart_checkBox"
                    android:layout_width="50dp"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="5dp"
                    android:checked="false"/>

                <ImageView
                    android:id="@+id/fragment_shopping_cart_bookCover_imageView"
                    android:layout_width="80dp"
                    android:layout_height="80dp"
                    android:layout_margin="10dp"
                    android:src="@drawable/cover" />


                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:layout_margin="20dp"
                    android:orientation="vertical" >
                    <TextView
                        android:id="@+id/fragment_shopping_cart_bookName_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:text="111111111111111" />
                    <TextView
                        android:id="@+id/fragment_shopping_cart_single_price_textView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="12sp"
                        android:text="单价:" />


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="25dp"
                        android:layout_alignParentBottom="true"
                        android:layout_alignParentRight="true"
                        android:orientation="horizontal"
                        android:paddingBottom="2dp"
                        android:paddingRight="3dp"
                        android:paddingTop="2dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="数量" />
                        <Button
                            android:id="@+id/fragment_shopping_cart_subNum_btn"
                            android:layout_width="26dp"
                            android:layout_height="match_parent"
                            android:layout_marginLeft="2dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:text="-" />

                        <View
                            android:layout_width="0.5sp"
                            android:layout_height="match_parent" />

                        <TextView
                            android:id="@+id/fragment_shopping_cart_bookNum"
                            android:layout_width="28dp"
                            android:layout_height="match_parent"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:text="1"
                            android:textSize="11sp" />

                        <View
                            android:layout_width="0.5sp"
                            android:layout_height="match_parent" />

                        <Button
                            android:id="@+id/fragment_shopping_cart_addNum_btn"
                            android:layout_width="26dp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="2dp"
                            android:background="@android:color/transparent"
                            android:gravity="center"
                            android:text="+" />
                    </LinearLayout>
                </LinearLayout>
                <TextView
                    android:id="@+id/fragment_shopping_cart_item_price_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="¥ "
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#FC4130"
                    android:layout_marginRight="10dp"
                    />
            </LinearLayout>
    </LinearLayout>

</LinearLayout>