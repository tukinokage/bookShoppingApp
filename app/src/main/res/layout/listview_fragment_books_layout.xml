<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#fff"
            android:orientation="horizontal"
            android:id="@+id/fragment_goods_book_content_linearLayout"
            tools:ignore="MissingConstraints">

            <ImageView
                android:id="@+id/fragment_goods_book_cover_imageView"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:src="@drawable/cover" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_marginTop="20dp">
                <TextView
                    android:id="@+id/fragment_goods_book_name_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:textSize="15sp"
                    android:text="bookname" />

                <TextView
                    android:id="@+id/fragment_goods_book_author_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:text="作者：" />

                <TextView
                    android:id="@+id/fragment_goods_book_price_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    tools:text="¥ "
                    android:textSize="16dp"
                    android:textStyle="bold"
                    android:textColor="#FC4130"
                    />
            </LinearLayout>

        </LinearLayout>

        <TextView
            android:id="@+id/fragment_goods_book_saleNum_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="14sp"
            android:text="销量："
            app:layout_constraintBottom_toBottomOf="@id/fragment_goods_book_content_linearLayout"
            app:layout_constraintRight_toRightOf="@id/fragment_goods_book_content_linearLayout"
            android:layout_margin="10dp"
            />

</androidx.constraintlayout.widget.ConstraintLayout>

</LinearLayout>