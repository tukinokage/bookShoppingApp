<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#FC4130">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:textColor="#fff"
            android:gravity="center"
            android:textStyle="bold"
            android:textSize="20dp"
            android:text="详情页" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="20dp"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/bookDetail_activity_bookCover_imageView"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/cover" />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/bookDetail_activity_bookName_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="16dp"
                    tools:text="斗罗大陆" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="作者：" />

                <TextView
                    android:id="@+id/bookDetail_activity_bookAuthor_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="222222" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:orientation="horizontal">
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="售价：" />

                <TextView
                    android:id="@+id/bookDetail_activity_bookPrice_textView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3333333333" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:layout_margin="20dp">
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="简介：" />
        <TextView
            android:id="@+id/bookDetail_activity_bookIntroduction_textView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="333333333333333333333333333333333333333333333cccccccccccccccccccccc3333333333333" />
    </LinearLayout>
    <Button
        android:id="@+id/bookDetail_activity_addToGoodsCart_button"
        android:layout_width="100dp"
        android:layout_height="50dp"
        android:background="@drawable/shape"
        android:textColor="#fff"
        android:layout_gravity="right"
        android:textSize="11dp"
        android:text="添加到购物车"
        android:layout_margin="20dp"/>

</LinearLayout>
